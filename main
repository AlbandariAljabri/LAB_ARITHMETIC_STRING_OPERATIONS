price = 2.99
quantity = 3
tax_rate = 0.075


print (f"Price of the item: ${price}" )
print(f"Quantity: {quantity}")
print(f"Tax rate: %{tax_rate*100}")
print()
Subtotal = price * quantity
print (f"Subtotal: ${Subtotal}")


Tax = round(tax_rate * Subtotal, 2)
print (f"Tax: ${Tax}") 

total = round(tax_rate + Subtotal, 2)
print(f"Total: ${total}" )


